<h2 align="center">Title: <%= @blogpost.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <h4 class="center"><strong>Description:</strong></h4>
 <hr>
 <%= simple_format(@blogpost.content) %>
<%= link_to "Edit", edit_blogpost_path(@blogpost), class: "btn btn-xs btn-primary" %> 
<%= link_to 'Delete', blogpost_path(@blogpost), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %> 
<%= link_to 'Back', blogposts_path , class: "btn btn-xs btn-success" %>