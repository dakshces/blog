<% provide(:title, @blogpost.title) %>
<% provide(:baseTitle, "Math In Operation") %>
<div class="well col-xs-8 col-xs-offset-2">
 <h4 class="center"><strong><%= @blogpost.title %></strong></h4>
 <hr>
 <%= simple_format(@blogpost.content) %>

<hr>
 
 <% @blogpost.tag_list.each do |tag|%>
  <div class="chip">
   <%= link_to tag, tag_path(tag) %>
  </div>
 <% end %>

 <% if logged_in? %>
 <div style="float: right"> 
  <%= link_to "Edit", edit_blogpost_path(@blogpost), class: "btn btn-xs btn-primary" %> 
  <%= link_to 'Delete', blogpost_path(@blogpost), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
  <%= link_to 'Back', blogposts_path , class: "btn btn-xs btn-success" %>
 </div>
 <% else %>
 <div style="float: right"> 
 <%= link_to 'Back', blogposts_path , class: "btn btn-xs btn-success" %>
 </div>
 <% end %>
 </div>
 