 <% if @blogpost.errors.any? %>
 <h2>The following errors prevented the blogpost from being saved:</h2>
   <ul>
     <% @blogpost.errors.full_messages.each do |msg|%>
     <li><%= msg %></li>
     <% end %>
   </ul>
  <% end %>

<%= form_for @blogpost do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
 </p>
 <p>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
 </p>
 <p>
  <%= f.submit %>
 </p>
 <% end %>
